<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="12dp"
        android:background="#FFFEFF"
        android:elevation="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="79dp"
            android:layout_height="34dp"
            android:layout_marginLeft="20sp"
            android:text="모임 이름"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_open_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="12dp"
        android:background="#FFFEFF"
        android:elevation="6dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="모임 설명"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/edit_open_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="12dp"
        android:background="#FFFEFF"
        android:elevation="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/나이제한"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:text="나이 제한"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_open_age"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/나이제한1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="    ~"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/edit_open_age2"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="323dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160sp"
            android:layout_marginRight="175sp"
            android:layout_marginBottom="20sp"
            android:text="카테고리"
            android:textSize="22sp" />

        <RadioGroup
            android:id="@+id/category_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160sp">

            <RadioButton
                android:id="@+id/btn_club"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="동아리" />

            <RadioButton
                android:id="@+id/btn_study"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="스터디" />

            <RadioButton
                android:id="@+id/btn_sports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="운동" />

            <RadioButton
                android:id="@+id/btn_hobby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="취미" />

            <RadioButton
                android:id="@+id/btn_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="번개" />
        </RadioGroup>

        <Button
            android:id="@+id/button_open_image"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="대표 사진" />

        <Button
            android:id="@+id/button_open_create"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="만들기" />

    </LinearLayout>

</LinearLayout>